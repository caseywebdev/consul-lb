{
  consul: '{{env "CONSUL_URL"}}',
  jobs: [
    {name: 'setup', exec: 'bin/setup'},
    {
      name: '{{env "CONSUL_SERVICE_NAME"}}',
      exec: 'nginx',
      when: {source: 'setup', once: 'exitSuccess'},
      restarts: 'unlimited',
      port: 80,
      health: {
        exec: 'curl -fsSo /dev/null localhost',
        interval: 5,
        ttl: 10
      },
      {{- if env "CONSUL_SERVICE_TAGS"}}
      tags: ["{{env "CONSUL_SERVICE_TAGS" | split "," | join "\", \""}}"],
      {{- end}}
      consul: {
        deregisterCriticalServiceAfter: '10m'
      }
    },
    {
      name: 'watch-cert',
      exec: 'bin/watch-cert',
      when: {source: '{{env "CONSUL_SERVICE_NAME"}}', once: 'healthy'},
      restarts: 'unlimited'
    },
    {
      name: 'watch-services',
      exec: 'bin/watch-services',
      when: {source: '{{env "CONSUL_SERVICE_NAME"}}', once: 'healthy'},
      restarts: 'unlimited'
    },
    {name: 'check', exec: 'bin/check', when: {interval: '12h'}}
  ]
}
