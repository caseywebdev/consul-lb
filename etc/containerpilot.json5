{
  consul: '{{env "CONSUL_URL"}}',
  jobs: [
    {name: 'setup', exec: 'bin/setup'},
    {name: 'touch', exec: 'bin/touch', when: {interval: '12h'}},
    {
      name: '{{env "CONSUL_SERVICE_NAME"}}',
      exec: 'bin/nginx',
      when: {source: 'setup', once: 'exitSuccess'},
      restarts: 'unlimited',
      port: 80,
      health: {
        exec: 'curl -fsSo /dev/null localhost',
        interval: 5,
        ttl: 10
      },
      {{- if env "CONSUL_SERVICE_TAGS"}}
      tags: ["{{env "CONSUL_SERVICE_TAGS" | split "," | join "\", \""}}"],
      {{- end}}
      consul: {
        deregisterCriticalServiceAfter: '10m'
      }
    },
    {
      name: 'watch',
      exec: 'bin/watch',
      when: {source: 'setup', once: 'exitSuccess'},
      restarts: 'unlimited'
    }
  ]
}
